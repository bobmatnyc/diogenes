# Sample .env.local file for Clerk Authentication
# Copy this file to .env.local and replace with your actual keys

# Clerk Authentication (Required)
# Get these from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_replace_with_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_replace_with_your_clerk_secret_key

# Clerk Redirect URLs (These are configured in the code)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/chat
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/chat

# OpenRouter API Configuration (Required for chat functionality)
OPENROUTER_API_KEY=sk-or-v1-replace_with_your_openrouter_key

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Search API Configuration (Optional)
TAVILY_API_KEY=tvly-replace_with_your_tavily_key

# Mock search for testing
ENABLE_MOCK_SEARCH=false